{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "**/*/lib", "**/*/dist"]
}
