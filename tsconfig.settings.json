{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "lib": ["ES6"],
    "declaration": true,
    "strict": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/*/lib", "**/*/dist"]
}
