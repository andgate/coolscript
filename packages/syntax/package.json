{
  "name": "@coolscript/syntax",
  "version": "0.0.3",
  "description": "Coolscript programming language syntax library.",
  "main": "./lib/index.js",
  "module": "./lib/index.cjs",
  "types": "./lib/index.d.ts",
  "publishConfig": {
    "main": "./lib/index.js",
    "module": "./lib/index.cjs",
    "typings": "./lib/index.d.ts",
    "access": "public"
  },
  "files": [
    "lib/",
    "LICENSE"
  ],
  "scripts": {
    "start": "pnpm watch",
    "build": "pnpm build:lib",
    "build:lib": "pnpm clean && pnpm build:ts && pnpm build:js",
    "build:js": "node build.js",
    "build:ts": "tsc",
    "clean": "rimraf lib/ tsconfig.tsbuildinfo",
    "watch": "concurrently \"pnpm:watch:*\"",
    "watch:js": "node build.js --watch",
    "watch:ts": "tsc --watch",
    "check": "tsc --noEmit",
    "prettier": "prettier --check src/ tests/",
    "prettier:fix": "prettier --write src/ tests/",
    "lint": "eslint src/** tests/** --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "verify": "pnpm prettier && pnpm lint",
    "verify:fix": "pnpm prettier:fix && pnpm lint:fix",
    "test": "jest"
  },
  "author": "Gabriel Anderson",
  "license": "MIT",
  "gitHead": "9b91bf0df0bb73d74440b9a1d191fd5c91c6af93"
}
