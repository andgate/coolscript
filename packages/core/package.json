{
  "name": "language-coolscript",
  "version": "0.0.1",
  "description": "Core library for the coolscript programming language",
  "main": "src/index.ts",
  "publishConfig": {
    "main": "lib/index.js",
    "typings": "lib/index.d.ts"
  },
  "scripts": {
    "start": "tsc --build --watch",
    "build": "tsc --build",
    "check": "tsc --noEmit",
    "prettier": "prettier --check src/ tests/",
    "prettier:fix": "prettier --write src/ tests/",
    "lint": "eslint src/** tests/** --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "verify": "pnpm prettier && pnpm lint",
    "verify:fix": "pnpm prettier:fix && pnpm lint:fix",
    "test": "jest",
    "clean": "rimraf coverage lib .pnpm-debug.log tsconfig.tsbuildinfo"
  },
  "author": "Gabriel Anderson",
  "license": "MIT"
}
