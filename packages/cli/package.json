{
  "name": "@coolscript/cli",
  "version": "0.0.2",
  "description": "Coolscript programming language commandline interface.",
  "main": "dist/index.js",
  "bin": {
    "coolscript": "./dist/index.js"
  },
  "files": [
    "dist/",
    "LICENSE"
  ],
  "scripts": {
    "start": "",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node10.4 --outfile=dist/index.js",
    "check": "tsc --noEmit",
    "prettier": "prettier --check src/ tests/",
    "prettier:fix": "prettier --write src/ tests/",
    "lint": "eslint src/** tests/** --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "verify": "pnpm prettier && pnpm lint",
    "verify:fix": "pnpm prettier:fix && pnpm lint:fix",
    "test": "jest",
    "clean": "rimraf dist/ node_modules/ coverage .pnpm-debug.log"
  },
  "author": "Gabriel Anderson",
  "license": "MIT",
  "dependencies": {
    "@coolscript/parser": "^0.0.2",
    "@coolscript/syntax": "^0.0.2"
  }
}
