{
  "name": "coolscript-platform",
  "private": true,
  "description": "Monorepo for the coolscript language platform.",
  "version": "0.0.0",
  "engines": {
    "pnpm": ">=6",
    "npm": ">=8",
    "node": ">=16"
  },
  "scripts": {
    "start": "pnpm build && lerna run start --parallel",
    "bootstrap": "lerna bootstrap",
    "postinstall": "pnpm bootstrap",
    "prepublish": "pnpm build",
    "check": "lerna run check",
    "verify": "lerna run verify --stream",
    "prettier": "lerna run prettier",
    "build": "lerna run build && pnpm nojekyll",
    "build:lib": "pnpm build:plugin && lerna run build:lib",
    "build:plugin": "lerna run build:plugin",
    "test": "jest",
    "clean": "pnpm clean:build && pnpm clean:etc && pnpm clean:node_modules",
    "clean:all": "pnpm run clean && rimraf node_modules",
    "clean:docs": "rimraf docs/",
    "clean:build": "rimraf packages/*/dist/ packages/*/lib/ **/tsconfig.tsbuildinfo",
    "clean:dist": "rimraf packages/*/dist/ **/tsconfig.tsbuildinfo",
    "clean:lib": "rimraf packages/*/lib/ **/tsconfig.tsbuildinfo",
    "clean:etc": "rimraf .parcel-cache **/tsconfig.tsbuildinfo **/.pnpm-debug.log **/lerna-debug.log **/coverage",
    "clean:node_modules": "rimraf packages/*/node_modules/",
    "nojekyll": "nodetouch docs/.nojekyll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andgate/coolscript.git"
  },
  "author": "Gabriel Anderson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andgate/coolscript/issues"
  },
  "homepage": "https://andgate.github.io/coolscript",
  "devDependencies": {
    "@parcel/transformer-inline-string": "^2.0.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.10",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "npm-dts": "^1.3.10",
    "parcel": "^2.0.1",
    "prettier": "2.5.1",
    "prettier-config-standard": "^4.0.0",
    "pretty-js": "^0.2.2",
    "rimraf": "^3.0.2",
    "touch": "^3.1.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
